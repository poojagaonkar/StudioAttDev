<resources>

    <style name="AttiniTheme" parent="MaterialTheme.Base">

    </style>

    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#0098B1</item>
        <item name="colorPrimaryDark">#008499</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColor">#008499</item>
        <item name="android:textColorHint">#D5D5D5</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:dropDownItemStyle">@style/Widget.DropDownItemLight</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowStyle</item>
    </style>

    <style name="MyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#F5F5F5</item>
        <item name="spinBars">true</item>
    </style>
    <style name="PrefTheme" parent="MaterialTheme.Base">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#0098B1</item>
    </style>
    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">#616161</item>
    </style>
    <style name="Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">#616161</item>
    </style>


</resources>